#!/usr/bin/env bash
# This script configures Nginx on an Ubuntu 16.04 machine to have a custom 404 page containing the string "Ceci n'est pas une page".

# Install Nginx
sudo apt update
sudo apt install nginx -y

# Configure custom 404 error page
sudo bash -c 'cat << EOF > /etc/nginx/sites-available/custom_404
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
        root /usr/share/nginx/html;
        echo "Ceci n'est pas une page";
    }
}
EOF'

# Enable the custom site configuration
sudo ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Remove the default symbolic link
sudo rm /etc/nginx/sites-enabled/default

# Test Nginx configuration
sudo nginx -t

# Restart Nginx to apply changes
sudo service nginx restart
